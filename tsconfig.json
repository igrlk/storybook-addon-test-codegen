{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"incremental": false,
		"isolatedModules": true,
		"strict": true,
		"jsx": "react",
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noImplicitAny": true,
		"rootDir": "./",
		"skipLibCheck": true,
		"target": "ES2020"
	},
	"include": ["src/**/*", "tsup.config.ts"]
}
